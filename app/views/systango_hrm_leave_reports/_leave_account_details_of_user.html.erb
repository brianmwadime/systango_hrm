  <thead>
	  <tr>
		  <th><%= l(:label_leave_entitled)%></th>
		  <th><%= l(:label_leave_applicable)%></th>
		  <th><%= l(:label_leave_taken)%></th>
		  <th><%= l(:label_leave_balance)%></th>
		  <th><%= l(:label_maternity_leave)%></th>
		  <th><%= l(:label_total_comp_offs_given)%></th>
	  </tr>
	</thead>
	<tbody>	  
	  <tr class="<%= 'even' -%> issue">
	    <td><%= @leave_account.leave_summary_current_year.leaves_entitled rescue nil %></td>
